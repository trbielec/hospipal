<UserControl x:Class="Hospipal.PatientTreatmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800" HorizontalAlignment="Center">
    <Grid>

        <Label x:Name="lblTreatment" Content="Treatment" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Segoe Marker"/>
        <Grid Margin="0,55,0,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblPatientName" Content="Patient Name:" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <Label x:Name="lblName" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label x:Name="lblHistory" Grid.Row="1" Content="History" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
            <Button x:Name="buttonCancel" HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="buttonCancel_Click" Grid.Column="3" Grid.Row="7">
                <Image Source="Resources/Button Images/cancel.png"/>
            </Button>
            <Button x:Name="buttonModify" HorizontalAlignment="Left" VerticalAlignment="Center" Click="buttonModify_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="3" Grid.Row="3">
                <Image x:Name="buttonModify1" Source="Resources/Button Images/edit.png"/>
            </Button>
            <Button x:Name="buttonRemove" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="4" Grid.RowSpan="2" Grid.Row="5" Click="buttonRemove_Click"  Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="Resources/Button Images/trash.png"/>
            </Button>
            <Button x:Name="buttonAdd" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" Click="buttonRemove_Click"  Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Image Source="Resources/Button Images/add.png"/>
            </Button>
            <DataGrid x:Name="dataGridTreatments" IsReadOnly="True" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalGridLinesBrush="{x:Null}" SelectionMode="Single" CanUserDeleteRows="False" AlternatingRowBackground="Bisque"  Background="Transparent"  CanUserAddRows="False" AutoGenerateColumns="false" ItemsSource="{Binding}" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="6" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Treatment Type" Binding="{Binding Type}" Width="1*"/>
                    <DataGridTextColumn Header="Treatment Date" Binding="{Binding DateToShortDateString}" Width="1*"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="1*"/>
                    <DataGridTextColumn Header="Ward" Binding="{Binding Ward}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>


    </Grid>
</UserControl>
