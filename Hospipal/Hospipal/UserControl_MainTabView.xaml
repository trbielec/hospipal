<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             x:Class="Hospipal.UserControl_MainTabView" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <telerik:RadTabControl>
            <telerik:RadTabItem x:Name="PatientsTab" Header="Patients" Height="Auto" Width="Auto"/>
            <telerik:RadTabItem x:Name="NursesTab" Header="Nurses" Height="Auto" Width="Auto"/>
            <telerik:RadTabItem x:Name="WardsTab" Header="Wards" Height="Auto" Width="Auto"/>
        </telerik:RadTabControl>

    </Grid>
</UserControl>
